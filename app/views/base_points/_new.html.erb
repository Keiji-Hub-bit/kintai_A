<% provide(:class_text, 'new') %>
<% provide(:button_text, '追加') %>

<div class="modal-dialog modal-lg modal-dialog-center">
  <div class="modal-content">
    <div class="modal-window">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">×</span>
        </button>
      <h1 class="modal-title">拠点情報の追加</h1>
      </div>
    <div class="modal-body">
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <%= form_with(model: @base_point , url: base_points_path, local: true, method: :post) do |f| %>
            <%= render 'shared/base_error_messages', object: @base_point %>

            <%= f.label :base_number, class: "label-#{yield(:class_text)}" %>
            <%= f.text_field :base_number, class: "form-control" %>

            <%= f.label :base_name, class: "label-#{yield(:class_text)}" %>
            <%= f.text_field :base_name, class: "form-control" %>
    
            <%= f.label :base_kind, class: "label-#{yield(:class_text)}" %>
            <%= f.text_field :base_kind, class: "form-control" %>

            <div class="center">
              <%= f.submit yield(:button_text), class: "btn btn-primary btn-#{yield(:class_text)}" %>
              <button type="button" class="btn btn-lg btn-<%= yield(:class_text) %>" data-dismiss="modal">
                キャンセル
              </button>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>