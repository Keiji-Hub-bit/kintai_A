<% provide(:class_text, 'update') %>
<% provide(:button_text, '更新') %>

<div class="modal-dialog modal-lg modal-dialog-center">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">×</span>
      </button>
      <h1 class="modal-title">拠点情報の更新</h1>
    </div>
    <div class="modal-body">
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <%= form_with(model: @base_point , url: base_point_path(@base_point.id), local: true, method: :patch) do |f| %>
            <%= render 'shared/base_error_messages', object: @base_point %>

            <%= f.label :base_number, class: "label-#{yield(:class_text)}" %>
            <%= f.text_field :base_number, class: "form-control" %>

            <%= f.label :base_name, class: "label-#{yield(:class_text)}" %>
            <%= f.text_field :base_name, class: "form-control" %>
    
            <%= f.label :base_kind, class: "label-#{yield(:class_text)}" %>
            <%= f.select :base_kind, [["出勤","出勤"],["退勤","退勤"]], include_blank: "選択してください" class: "form-control" %>
                                  
            <div class="center">
              <%= f.submit yield(:button_text), class: "btn btn-primary btn-#{yield(:class_text)}" %>
              <button type="button" class="btn btn-default btn-<%= yield(:class_text) %>" data-dismiss="modal">
              </button>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>