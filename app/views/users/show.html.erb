<% provide(:title, @user.name) %>
<div class="container-fluid">
  <div class="row">
  <table class="table table-bordered table-condensed user-table">
    <tr>
      <td><%= link_to "◀", user_path(date: @first_day.prev_month), class: "btn btn-info" %>&nbsp;
      【<%= l(@first_day, format: :middle) %>】時間管理表&nbsp;
      <%= link_to "▶", user_path(date: @first_day.next_month), class: "btn btn-info" %>
      </td>

      <td>指定勤務開始時間:   <%= @user.work_start_time.strftime("%H:%M") %>
      <br>指定勤務終了時間 :  <%= @user.work_finish_time.strftime("%H:%M") %></td>
      <td colspan=3>基本時間:  <%= format_basic_info(@user.basic_time) %></td>
      <td>初日:  <%= l(@first_day, format: :short) %></td>
    </tr>

    <tr>
      <td>所属 : <%= @user.department.present? ? @user.department : "未所属" %></td>
      <td>氏名 : <%= @user.name %></td>
      <td>コード</td>
      <td></td>
      <td>出勤日数:<%= @worked_sum %>日</td>
      <td>締め: <%= l(@last_day, format: :short) %></td>
    </tr>
  </table>
  </div>
</div>
  <%= link_to "勤怠編集", attendances_edit_one_month_user_path(date: @first_day), class: "btn btn-lg btn-primary" %>
<div>
  <table class="table table-bordered tabke-condensed table-hover" id="table-attendances">
    <thead>
      <tr>
        <th>残業申請</th>
        <th>日付</th>
        <th>曜日</th>
        <th>勤怠登録</th>
        <th>出勤時間</th>
        <th>退勤時間</th>
        <th>在社時間</th>
        <th>備考</th>
        <th></th>
        <th></th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @attendances.each do |day| %>
        <tr>
        　<td></td>
          <td><%= l(day.worked_on, format: :short) %></td>
          <td><%= $days_of_the_week[day.worked_on.wday] %></td>
          <td>
            <% if btn_text = attendance_state(day) %>
              <%= link_to "#{btn_text}登録", user_attendance_path(@user, day), method: :patch, class: "btn btn-primary btn-attendance" %>
            <% end %>
          </td>
          <td><%= l(day.started_at, format: :time) if day.started_at.present? %></td>
          <td><%= l(day.finished_at, format: :time) if day.finished_at.present? %></td>
          <td>
            <% if day.started_at.present? && day.finished_at.present? %>
              <%= str_times = working_times(day.started_at, day.finished_at) %>
              <% @total_working_times = @total_working_times.to_f + str_times.to_f%>
            <% end %>          
          </td>
          <td><%= day.note %></td>
          <td></td>
          <td></td>
          <td></td>
          <td></td>
          <td></td>
          
        </tr>
      <% end %>
    </tbody>
    
    <tfoot>
      <!--lowspan:縦結合　colspan:横結合-->
      <tr>
        <td></td>
        <td colspan="2">累計日数</td>
        <td colspan="2">総合勤務時間</td>
        <td colspan="2">累計在社時間</td>
        <td rowspan="2"></td>
      </tr>
      <tr>
        <td></td>
        <td colspan="2"><%= @attendances.count %></td>
        <td colspan="2"><%= ((format_basic_info(@user.work_finish_time).to_f)-(format_basic_info(@user.work_start_time).to_f)) * @worked_sum %></td>
        <td colspan="2"><%= format("%.2f", @total_working_times.to_f) %></td>
      </tr>
    </tfoot>
  </table> 
</div>    