<% provide(:title, 'ログイン') %>
<h1>ユーザー登録</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @user, local: true) do |f| %>
      <%= render 'shared/error_messages' %>

      <%= f.label :name, class: "label-signup" %>
      <%= f.text_field :name, class: "form-control" %>

      <%= f.label :email, class: "label-signup" %>
      <%= f.email_field :email, class: "form-control" %>

      <%= f.label :department, class: "label-signup" %>
      <%= f.text_field :department, class: "form-control" %>

      <%= f.label :employee_number, class: "label-signup" %>
      <%= f.text_field :employee_number, class: "form-control" %>

      <%= f.label :card_ID, class: "label-signup" %>
      <%= f.text_field :card_ID, class: "form-control" %>

      <%= f.label :password, class: "label-signup" %>
      <%= f.password_field :password, class: "form-control" %>

      <%= f.label :basic_time, class: "label-signup" %>
      <%= f.time_field :basic_time, class: "form-control" %>

      <%= f.label :work_start_time, class: "label-signup" %>
      <%= f.time_field :work_start_time, class: "form-control" %>

      <%= f.label :work_finish_time, class: "label-signup" %>
      <%= f.time_field :work_finish_time, class: "form-control" %>

      <%= f.submit "新規作成", class: "btn btn-primary btn-block btn-signup" %>
    <% end %>
  </div>
</div>