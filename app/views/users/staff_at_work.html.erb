<div class= "container">
  <h1> 出勤中社員一覧 </h1>
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      <table class="table table-bordered table-hover-rows table-striped user-table">
          <tr>
            <th>社員番号</th>
            <th>名前</th>
          </tr>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.employee_number %></td>
            <td><%= user.name %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div> 